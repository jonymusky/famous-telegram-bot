{
  "name": "famous-telegram-bot",
  "version": "1.0.0",
  "description": "A Telegram bot that uses AI to impersonate famous personalities",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "typescript",
    "openai",
    "ollama"
  ],
  "author": "Jonathan Muszkat <me@jonymusky.com>",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^22.10.1",
    "dotenv": "^16.4.5",
    "grammy": "^1.32.0",
    "openai": "^4.73.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
